<%= stylesheet_link_tag 'form' %>
<%= form_with(model: user, class: "form-container") do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "erreur") %> à empêcher la création de l'utilisateur :</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-container">
    <%= form.label :nom, style: "display: block" %>
    <%= form.text_field :nom, class: "input-field" %>
  </div>

  <div class="input-container">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: "input-field" %>
  </div>

  <div class="input-container">
    <%= form.submit class: "input-submit" %>
  </div>
<% end %>
